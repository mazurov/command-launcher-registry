# CLI Client Credentials Configuration
# Location: ~/.config/cola-registry/credentials.yaml
# Permissions: 0600 (read/write for owner only)

# Server URL (required)
url: "https://registry.example.com"

# Authentication token (Linux only)
# On macOS: Token stored in Keychain
# On Windows: Token stored in Credential Manager
# On Linux: Token stored in this file
token: "username:password"
